---
import { ThemeToggle } from "./ThemeToggle";
import { MobileMenu } from "./MobileMenu";

const navItems = [
    {
        title: "About",
        path: "/",
    },
    {
        title: "Misc",
        path: "/misc",
    },
    {
        title: "CV",
        path: "/cv.pdf",
    },
];
---

<header class="mt-5 mb-12 flex flex-col justify-center items-center">
    <nav class="flex w-full items-center justify-between">
        <a href="/"><h1 class="text-2xl font-bold">Yiu Fai CHEUNG</h1></a>

        <div class="flex flex-row items-center gap-3">
            <ul class="hidden lg:flex flex-row gap-3 justify-center items-center relative">
                {
                    navItems.map((item) => (
                        <li>
                            <a
                                aria-label="navigation link"
                                href={item.path}
                                class="flex py-2 lg:px-6"
                            >
                                {item.title}
                            </a>
                        </li>
                    ))
                }
            </ul>
            <ThemeToggle client:load />
            <div class="lg:hidden h-[1.2rem] w-[1.2rem]">
                <MobileMenu navItems={navItems} client:load />
            </div>
        </div>
    </nav>
</header>
