---
import { ThemeToggle } from "./ThemeToggle";
import { MobileMenu } from "./MobileMenu";

const navItems = [
    {
        title: "About",
        path: "/",
    },
    {
        title: "Misc",
        path: "/misc",
    },
    {
        title: "CV",
        path: "/cv.pdf",
    },
];
---

<header
    class="fixed top-0 left-0 right-0 z-40 flex flex-col justify-center items-center h-16 bg-inherit shadow-sm dark:shadow-shironeri/15 shadow-sumi/10"
>
    <nav
        class="mx-auto max-w-[85rem] w-10/12 md:w-9/12 xl:w-7/12 flex items-center justify-between"
    >
        <a href="/"><h1 class="text-2xl font-bold">Yiu-Fai CHEUNG</h1></a>

        <div class="flex flex-row items-center gap-3">
            <ul
                class="hidden lg:flex flex-row gap-3 justify-center items-center relative"
            >
                {
                    navItems.map((item) => (
                        <li>
                            <a
                                aria-label="navigation link"
                                href={item.path}
                                class="flex py-2 lg:px-6"
                            >
                                {item.title}
                            </a>
                        </li>
                    ))
                }
            </ul>
            <ThemeToggle client:load />
            <div class="lg:hidden h-[1.2rem] w-[1.2rem]">
                <MobileMenu navItems={navItems} client:load />
            </div>
        </div>
    </nav>
</header>
