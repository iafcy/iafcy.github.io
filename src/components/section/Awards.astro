---
import { getCollection } from "astro:content";
import HeadingWithUnderline from "@components/HeadingWithUnderline.astro";

const awards = await getCollection('awards');
---

<section class="mb-24">
    <HeadingWithUnderline text="Awards" />
    
    <ul>
        {
            awards.map(({data}) => (
                <li class="mb-4 flex flex-row gap-4 items-start"> {/* items-center aligns year with first line of text */}
                    <div class="min-w-[6.5rem] shrink-0 flex justify-center">
                        <span class="w-full bg-mizugaki/10 text-mizugaki dark:text-mizugaki/90 border border-mizugaki/20 px-3 py-1 rounded-full text-xs font-bold tracking-wider shadow-sm text-center">
                            {data.year}
                        </span>
                    </div>
                    
                    <div>
                        <h3>{data.name}</h3>
                        {data.description && (
                            <p class="text-sm text-gray-500 dark:text-gray-400 mt-0.5">{data.description}</p>
                        )}
                    </div>
                </li>
            ))
        }
    </ul>
</section>
