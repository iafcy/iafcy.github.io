---
import { Image } from "astro:assets";
import myImage from "@assets/myself2.png";

import { Contacts } from "@components/Contacts";
import mdComponent from "@components/md/components";

import { Content } from "@content/intro.mdx";
---

<section class="block mb-24 lg:flex lg:items-center">
    <div class="w-60 flex-shrink-0 mx-auto mb-16 lg:mb-0 lg:mr-24">
        <Image
            src={myImage}
            alt="A photo of myself"
            class="w-60 h-60 rounded-full mb-6 border-8 border-mizugaki"
        />
        <Contacts />
    </div>
    <div class="mt-4 lg:mt-0">
        <Content components={mdComponent} />
    </div>
</section>
